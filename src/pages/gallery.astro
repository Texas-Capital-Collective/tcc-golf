---
import Layout from '../layouts/Layout.astro'

const images = [
    "/gallery_test_1.png", 
    "/gallery_test_2.png", 
    "/gallery_test_3.png", 
    "/gallery_test_4.png", 
    "/gallery_test_5.png", 
    "/gallery_test_6.png", 
    "/gallery_test_7.png", 
    "/gallery_test_8.png", 
    "/gallery_test_9.png", 
    "/gallery_test_10.png", 
]
---

<link rel="stylesheet" href="/src/styles/global.css" />
<Layout title="Welcome to Astro.">
    <div class="flex justify-center">
        <div class="py-12 w-10/12">

            <!-- title -->
            <div class="mb-6
            text-4xl
            md:text-5xl 
            lg:text-6xl">
                <p class="font-light text-stone-300">Photo</p>
                <p class="font-bold text-zinc-800">Gallery</p>
            </div>

            <hr>

            <!-- images -->
            <div class="grid -mx-3 py-3
            grid-cols-1
            grid-rows-1

            sm:grid-cols-2
            sm:grid-rows-2

            md:grid-cols-4 
            md:grid-rows-2

            lg:grid-cols-5
            lg:grid-rows-2">

                <div class="p-3">
                    <img src={images[0]}>
                </div>

                <div class="hidden sm:block p-3">
                    <img src={images[1]}>
                </div>

                <div class="hidden sm:block p-3">
                    <img src={images[2]}>
                </div>

                <div class="hidden sm:block p-3">
                    <img src={images[3]}>
                </div>
                
                <div class="hidden md:block p-3">
                    <img src={images[4]}>
                </div>

                <div class="hidden md:block p-3">
                    <img src={images[5]}>
                </div>

                <div class="hidden md:block p-3">
                    <img src={images[6]}>
                </div>

                <div class="hidden md:block p-3">
                    <img src={images[7]}>
                </div>

                <div class="hidden lg:block p-3">
                    <img src={images[8]}>
                </div>

                <div class="hidden lg:block p-3">
                    <img src={images[9]}>
                </div>
            </div>

            <!-- controls -->
            <div class="flex items-center mt-6">
                <div class="mr-4">
                    <!-- dev notes: janky, fix when components become interactive -->
                    <p class="text-stone-300 tracking-[.2em] text-xl
                    hidden
                    lg:block">
                        01 ╱ 01
                    </p>

                    <p class="text-stone-300 tracking-[.2em] text-xl
                    hidden
                    md:block
                    lg:hidden">
                        01 ╱ 02
                    </p>

                    <p class="text-stone-300 tracking-[.2em] text-xl
                    hidden
                    sm:block
                    md:hidden">
                        01 ╱ 04
                    </p>

                    <p class="text-stone-300 tracking-[.2em] text-xl
                    block
                    sm:hidden">
                        01 ╱ 10
                    </p>
                </div>

                <div>
                    <button class="border border-zinc-300 bg-white 
                    w-10 
                    h-10
                    mr-4">
                        ←
                    </button>

                    <button class="border border-zinc-200 bg-zinc-100
                    w-10 
                    h-10">
                        →
                    </button>
                </div>
            </div>
        </div>
    </div>
</Layout>