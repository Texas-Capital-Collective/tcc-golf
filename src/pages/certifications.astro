---
import Layout from '../layouts/Layout.astro'

const images = [
    "/src/assets/certification_instructor_1.jpg",
    "/src/assets/certification_instructor_2.jpg",
    "/src/assets/certification_instructor_3.jpg",
    "/src/assets/certification_instructor_4.jpg",
    "/src/assets/certification_instructor_5.jpg",
    "/src/assets/certification_instructor_6.jpg",
];

const total_img = images.length

const md_img_displayed = 8
const sm_img_displayed = 4
const img_displayed = 1

const title_first_half = "Instructor"
const title_second_half = "Certifications"

const page = "01"
const max_page = "05"
---

<link rel="stylesheet" href="/src/styles/global.css" />
<Layout title="Welcome to Astro.">
    <div class="flex justify-center">
        <div class="py-12 w-10/12">

            <!-- title -->
            <div class="mb-6 text-4xl md:text-5xl lg:text-6xl">
                <p class="font-light text-stone-300">{title_first_half}</p>
                <p class="font-bold text-zinc-800">{title_second_half}</p>
            </div>

            <hr>

            <!-- images -->
            <div class="grid -mx-3 py-3 grid-cols-1 grid-rows-1 sm:grid-cols-1
            md:grid-cols-1 lg:grid-cols-2 ">

                {images.map((image, index) => (

                    // hides varying number of images given window size
                    <div id={typeof(index)} class={`p-3
                        ${index >= md_img_displayed ? 'hidden lg:block' : ''}
                        ${index >= sm_img_displayed && index < md_img_displayed ? 'hidden md:block' : ''} 
                        ${index >= img_displayed && index < sm_img_displayed ? 'hidden sm:block' : ''} 
                        ${index >= img_displayed ? 'hidden' : ''} 
                    `}>
                                
                        <img src={image} />
                    </div>
                ))}
            </div>

            <!-- controls -->
            <div class="flex items-center mt-6 hidden">
                <div class="flex mr-4">
                    <p class="text-stone-300 tracking-[.2em] text-xl">
                        {page}
                    </p>

                    <p class="text-stone-300 tracking-[.2em] text-xl">
                        ╱
                    </p>

                    <p class="text-stone-300 tracking-[.2em] text-xl">
                        {max_page}
                    </p>
                </div>

                <div class="hidden">
                    <button class="border border-zinc-300 bg-white w-10 h-10 mr-4">
                        ←
                    </button>

                    <button class="border border-zinc-200 bg-zinc-100 w-10 h-10">
                        →
                    </button>
                </div>
            </div>
        </div>
    </div>
</Layout>