---
const price_img_1 = "/src/assets/certification_image_4.jpg";
const price_img_2 = "/src/assets/certification_image_3.jpg";
const price_img_3 = "/src/assets/certification_image_5.jpg";

const title = "Pricing"

const button_text = "Click here â†’"
const button_link = "/pricing"

const info = "Click here for more information on pricing!"
---

<link rel="stylesheet" href="/src/styles/global.css" />

<div class="flex justify-center py-8">

    <!-- dev notes: the actual container for pricing -->
    <div class="w-10/12 lg:pb-20">

        <!-- dev notes: div to create the image overhang -->
        <div class="bg-zinc-50 grid grid-cols-10 py-4 px-0 md:px-4 lg:px-15">

            <div class="col-span-6 sm:flex sm:items-center">
                <div class="flex items-center grid grid-cols-1 sm:grid-cols-2 lg:-mb-16">
                    <div class="p-4 sm:p-2">
                        <img src={price_img_1} />
                        <br />
                        <img src={price_img_2} />
                    </div>

                    <div class="p-4 sm:p-2">
                        <img src={price_img_3} />
                    </div>
                </div>
            </div>

            <div class="col-span-4 flex items-center sm:items-start p-2 sm:p-4">
                <div>
                    <p class="font-extralight text-stone-300 text-4xl mb-4">
                        {title}
                    </p>

                    <p class="font-light text-xs md:text-sm lg:text-base">
                        {info}
                    </p>

                    <div class="mt-8 py-1 lg:py-5">
                        <a
                            href={button_link}
                            class="font-sans text-xs tracking-[.2em] border-black border-2 
                            hover:bg-black hover:text-white px-4 lg:px-12 py-2 lg:py-6">
                            
                            {button_text}
                        </a>
                    </div>
                </div>
            </div>
            
        </div>

    </div>

</div>
