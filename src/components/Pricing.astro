---
const price_img_1 = "/src/assets/certification_image_4.jpg";
const price_img_2 = "/src/assets/certification_image_9.jpg";
const price_img_3 = "/src/assets/certification_image_5.jpg";

const title = "Pricing"

const button_text = "Click here â†’"
const button_link = "/pricing"

const info = "Click here for more information on pricing!"
---

<link rel="stylesheet" href="/src/styles/global.css" />

<div class="flex justify-center py-8">

    <!-- dev notes: the actual container for pricing -->
    <div class="w-11/12 lg:pb-20">

        <!-- dev notes: div to create the image overhang -->
        <div class="bg-zinc-50 flex flex-col md:flex-row py-4 px-0 md:px-4 lg:px-15">
            <p class="visible w-auto h-auto sm:h-0 sm:w-0 sm:invisible font-extralight text-stone-400 text-6xl mb-2">
                {title}
            </p>
            <div class="w-full sm:w-5/12 sm:flex sm:items-center">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:-mb-16">
                    <div class="invisible h-0 sm:visible sm:h-auto p-4 sm:p-4">
                        <img class="py-4" src={price_img_1}  alt=""/>
                        <img class="py-4" src={price_img_2}  alt=""/>
                    </div>

                    <div class="p-0 sm:p-4 h-full flex items-center">
                        <img src={price_img_3}  alt=""/>
                    </div>
                </div>
            </div>

            <div class="w-full sm:w-1/2 flex items-center sm:items-start p-0 sm:p-4">
                <div>
                    <p class="invisible h-0 w-0 sm:h-auto sm:w-auto sm:visible font-extralight text-stone-400 text-6xl mb-6">
                        {title}
                    </p>

                    <p class="font-light text-base md:text-base lg:text-lg">
                        We offer unique pricing plans to accommodate each of our customers.
                        Pricing plans also differ between instructors, depending on skill level.
                        To receive a pricing estimate for your golf lessons, please contact us via email.
                    </p>

                    <div class="mt-8 py-1 lg:py-5">
                        <a
                            href={"/contact"}
                            class="font-sans text-xs tracking-[.2em] border-black border-2 
                            hover:bg-black hover:text-white px-4 lg:px-12 py-2 lg:py-6 uppercase">
                            
                            Contact us
                        </a>
                    </div>
                </div>
            </div>
            
        </div>

    </div>

</div>
