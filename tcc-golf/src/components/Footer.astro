<style>
    :root {
      --base-font-size: 16px;
      --font-family: sans-serif;
    }
  
    body {
      font-size: var(--base-font-size);
      font-family: var(--font-family);
    }
  
    .footer {
      background-color: #2C2C2C;
      color: #fff;
      padding: 40px 0;
      font-family: var(--font-family);
    }
  
    .container {
      display: flex;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
  
    .logo {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  
    .logo {
      max-height: 50px;
      margin-bottom: 10px;
    }
  
    .information, .contacts, .social-media {
      flex: 1;
      margin: 0 20px;
    }
  
    .information h3, .contacts h3, .social-media h3 {
      font-family: var(--font-family);
      font-size: calc(var(--base-font-size) + 4px);
      margin-right: 15rem;
      margin-bottom: 15px;
    }
  
    .information ul, .social-media ul {
      list-style: none;
      padding: 0;
    }
  
    .information li, .social-media li {
      margin-bottom: 12px;
      font-family: var(--font-family);
      font-size: var(--base-font-size);
    }
  
    .contacts p {
      margin-bottom: 10px;
      font-family: var(--font-family);
      font-size: var(--base-font-size);
    }
  
    .footer-bottom {
      text-align: center;
      padding-top: 20px;
      border-top: 1px solid #444;
      margin-top: 40px;
      font-family: var(--font-family);
      font-size: var(--base-font-size);
    }
  
    .footer-bottom p {
      margin: 0;
      font-family: var(--font-family);
    }
  
    .social-media ul {
      display: flex;
      justify-content: space-around;
    }
  
    .social-media li {
      font-size: 12px;
      margin-right: 12px;
      font-family: var(--font-family);
    }
  </style>  

<footer class="footer">
    <div class="container">
      <div class="logo">
        <img src="/images/a&dglogo.jpg" alt="Logo" class="logo"/>
      </div>
      <div class="information">
        <h3>Information</h3>
        <ul>
          <li>Main</li>
          <li>Gallery</li>
          <li>About</li>
          <li>Certifications</li>
          <li>Contacts</li>
        </ul>
      </div>
      <div class="contacts">
        <h3>Contacts</h3>
        <p><i class="fas fa-map-marker-alt"></i> 713 Hebron Pkwy #242,<br />Lewisville, Texas 75057</p>
        <p><i class="fas fa-phone-alt"></i> 214.223.4101</p>
        <p><i class="fas fa-envelope"></i> sampleemail@gmail.com</p>
      </div>
      <div class="social-media">
        <h3>Social Media</h3>
        <ul>
          <li><i class="fab fa-facebook-f"></i></li>
          <li><i class="fab fa-twitter"></i></li>
          <li><i class="fab fa-instagram"></i></li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; 2024 All Rights Reserved</p>
    </div>
  </footer>